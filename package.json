{
  "name": "@gruve/echo",
  "version": "0.0.2",
  "description": "GruveEventWidgets is a React component that allows users to display and manage event ticket selections easily.  It handles event display, ticket purchase flows, and supports customization like theme color and ticket selection handling.",
  "author": "xlassix",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "browser": "dist/index.umd.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.js",
      "browser": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "**/*.ts": "eslint --fix",
    "src/**/*": [
      "prettier --single-quote --write"
    ]
  },
  "scripts": {
    "build": "rollup -c",
    "build:test": "npx tsc",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install"
  },
  "unpkg": "dist/index.umd.js",
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@paystack/inline-js": "^2.22.2",
    "formik": "^2.4.6",
    "postcss": "^8.5.3",
    "uuid": "^11.1.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-url": "^8.0.2",
    "@types/node": "^22.14.1",
    "@types/paystack__inline-js": "^1.0.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "husky": "^8.0.3",
    "react-error-overlay": "^6.0.9",
    "rollup": "^4.40.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "events",
    "tickets",
    "host",
    "echo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GruveWeb3/echo.git"
  },
  "bugs": {
    "url": "https://github.com/GruveWeb3/echo.git/issues"
  },
  "homepage": "https://github.com/GruveWeb3/echo.git#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "resolutions": {
    "react-error-overlay": "6.0.9"
  },
  "contributors": [
    "Oki Ayobami (https://github.com/xlassix)"
  ]
}
