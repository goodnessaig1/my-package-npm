{
  "compilerOptions": {
    "lib": ["dom", "es2019"],
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": ["src", "types"]
}
